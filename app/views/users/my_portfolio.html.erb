<h1>My Portfolio</h1>
<div style="padding-top: 40px;">
    <h3>Search Stock</h3>
    <%= form_tag "search_stock", method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker Symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= "Search" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="results" style="padding-top: 20px;">
    <%= render "users/result" %>
</div>


<% if @tracked_stocks %>
    <%= render "stocks/list" %>
<% end %>